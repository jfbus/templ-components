package radio

import "github.com/jfbus/templ-components/components/label"

templ C(def D) {
	<div class={ def.class("radio") }>
		<input
			type="radio"
			id={ def.id() }
			name={ def.Name }
			if def.Value !="" {
				value={ def.Value }
			}
			if def.Checked {
				checked
			}
			if def.Disabled {
				disabled
			}
			class={ def.class("radio/input") }
			{ def.Attributes... }
		/>
		@label.C(def.label())
	</div>
}
