package cell

import "github.com/jfbus/templui/components/text"

templ C(def D) {
	if def.Header {
		<th
			scope="col"
			class={ def.class() }
			if def.ColSpan != "" {
				colspan={ def.ColSpan }
			}
		>
			if c, ok := def.Content.(templ.Component); ok {
				@c
			} else {
				@text.C(def.Content)
			}
		</th>
	} else {
		<td
			class={ def.class() }
			if def.ColSpan != "" {
				colspan={ def.ColSpan }
			}
		>
			if c, ok := def.Content.(templ.Component); ok {
				@c
			} else {
				@text.C(def.Content)
			}
		</td>
	}
}
